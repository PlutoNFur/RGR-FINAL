            @Html.DisplayNameFor(model => model.Lot.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.Img)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.Img)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lot.StartPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lot.StartPrice)
        </dd>
        <dt class="col-sm-2">
