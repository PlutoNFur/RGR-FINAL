@page
@using RGR_FINAL.Data.Identity;
@model RGR_FINAL.Pages.Lots.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>
 
<div>
    <h4>Lot</h4>
    <hr />
